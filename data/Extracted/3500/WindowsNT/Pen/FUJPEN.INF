; File     : FUJPEN.INF
;
; Abstract : This is the Setup information file for installing the 
;            Windows NT Pen Driver for Fujitsu's Pen Computers.
; 
;===============================================================================



;-------------------------------------------------------------------------------
; INF File Version Information
;-------------------------------------------------------------------------------
[version]
signature="$Windows NT$"
Provider=%FPC%
CatalogFile=fujpen.cat
DriverVer=09/10/2001,1.0.0.1

;-------------------------------------------------------------------------------
; This section denotes distribution disks and assocated Logical Disk
; Identifiers (LDIDs).
;
; <LDID> = <desc. string key>, <disk label>, <disk ser. num.>
;
; All the pen driver files fit on one diskette.
;-------------------------------------------------------------------------------
[SourceDisksNames]
1="NTPENDRIVER", "NTPENDRIVER", 0001

;-------------------------------------------------------------------------------
; This section lists all the filenames and filesizes on the one diskette.
; Setup uses filesizes to calculate and display a "space needed" amount in
; the UI.
;
; <filename> = <LDID>,,<filesize>
;-------------------------------------------------------------------------------
[SourceDisksFiles]
PENCAL.DLL     =1,,77824
PENCFG.CPL     =1,,57344
PENUI.DLL      =1,,176128
FUJPEN.SYS     =1,,21084
FUJPEN.INF     =1,,11650
PENMON.EXE     =1,,40960
PENCFG.HLP     =1,,13367

;-------------------------------------------------------------------------------
; This section defines the destination directories for each file-list section.
; <file-list section> = <predefined directory identifier (DRID)>
;
; The following fields specify the destination of files being installed
; (or uninstalled) for Pen Drivers for Windows NT
;-------------------------------------------------------------------------------
[DestinationDirs]
PenDriverFiles		= 12	; Windows NT driver directory
PenDriverInf  		= 17    ; Windows NT INF file directory
PenUtilities        = 10    ; Windows NT directory
PenDLLs             = 11    ; Windows NT system32 directory
PenHelp                 = 18  ; Windows NT Help directory

;-------------------------------------------------------------------------------
; This section contains the names of the sections that contain information
; about each optional component.
;-------------------------------------------------------------------------------
[Optional Components]
PenDriver


;-------------------------------------------------------------------------------
; Description of the Optional Component being installed (and uninstalled)
; by this INF file.
;-------------------------------------------------------------------------------
[PenDriver]
OptionDesc      = %PenDriverDesc%
Tip             = %PenDriverPrompt%
IconIndex       = 4
AddReg          = RegisterPenDriverAddReg, PenDriverAddReg
DelReg          = 
DelFiles        = 
CopyFiles       = PenDriverFiles, PenDriverInf, PenUtilities, PenDLLs, PenHelp
UpdateInis      = 
UpdateIniFields = 
Uninstall       = PenDriverRemove
Reboot          = 1

[PenDriverRemove]
DelFiles        = PenDriverFiles, PenDriverInf, PenUtilities, PenDLLs, PenHelp
DelReg          = PenDriverDelReg
UpdateInis      = 
UpdateIniFields = 
Reboot          = 1
 

;-------------------------------------------------------------------------------
; This section copies the fujpen.inf file to the harddisk so Setup can
; use it later for uninstall.
;-------------------------------------------------------------------------------
[PenDriverInf]
fujpen.inf,,,1

;-------------------------------------------------------------------------------
; This section copies the Pen Driver (fujpen.sys) to the Windows NT Drivers
; directory on the hard disk
;-------------------------------------------------------------------------------
[PenDriverFiles]
fujpen.sys,,,1

;-------------------------------------------------------------------------------
; This section copies the Pen Utility files to the Windows NT directory on the 
; hard disk
;-------------------------------------------------------------------------------
[PenUtilities]
penmon.exe,,,1

;-------------------------------------------------------------------------------
; This section copies the Pen DLL files to the Windows NT System32
; directory on the hard disk
;-------------------------------------------------------------------------------
[PenDLLs]
pencal.dll,,,1
pencfg.cpl,,,1
penui.dll,,,1

;-------------------------------------------------------------------------------
; This section copies the Pen Help file to the Windows NT Help
; directory on the hard disk
;-------------------------------------------------------------------------------
[PenHelp]
pencfg.hlp,,,1

;-------------------------------------------------------------------------------
; This section establishes the registry keys that Setup needs to install and
; uninstall the pen services option.
;-------------------------------------------------------------------------------
[RegisterPenDriverAddReg]
; Create Registry entries for Maint Mode Setup
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Setup\OptionalComponents,"PenDriver",,"PenDriver"
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Setup\OptionalComponents\PenDriver,INF,,"fujpen.inf"
; This optional component's [Optional Component's] section name.
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Setup\OptionalComponents\PenDriver,Section,,"PenDriver"
; The default for maintenance mode setup is to mark this component
; as installed.
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Setup\OptionalComponents\PenDriver,Installed,,"1"


[PenDriverAddReg]
HKLM,System\CurrentControlSet\Services\PenDrv,Start,0x00010001,1
HKLM,System\CurrentControlSet\Services\PenDrv,Type,0x00010001,1
HKLM,System\CurrentControlSet\Services\PenDrv,Tag,0x00010001,2
HKLM,System\CurrentControlSet\Services\PenDrv,ImagePath,,"SYSTEM32\DRIVERS\FUJPEN.SYS"
HKLM,System\CurrentControlSet\Services\PenDrv,DisplayName,,"Fujitsu Stylistic 3500 Pen Driver"
HKLM,System\CurrentControlSet\Services\PenDrv,Group,,"Keyboard Port"
