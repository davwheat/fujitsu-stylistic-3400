HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Run,PenMon,,"c:\winnt\penmon.exe"

;-------------------------------------------------------------------------------
; This section is referred to by [PenDriverRemove]. It removes all registry
; entries created by [PenDriverAddReg].
;-------------------------------------------------------------------------------
[PenDriverDelReg]
HKLM,System\CurrentControlSet\Services\PenDrv
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Setup\OptionalComponents,PenDriver,Installed,,"0"
HKLM,SOFTWARE\Microsoft\Windows\CurrentVersion\Run,PenMon,,""


;-------------------------------------------------------------------------------
; User-visible strings for Internationalization
;-------------------------------------------------------------------------------
[Strings]
; All translatable strings are placed in this section.
PenDriverDesc   = "Fujitsu Stylistic 3500 Pen Driver"
PenDriverPrompt = "Fujitsu Stylistic 3500 Pen Driver for Windows NT"
FPC             = "Fujitsu PC Corporation"



